1)
echo "Entre com o seu nome:"
read Nome
echo -e "Seu nome e: $nome"

2)
echo “Entre com o primeiro valor:”
read v1
echo “Entre com o segundo valor:”
read v2
echo Multiplicação = $(($v1*$v2))

3)
#!/bin/bash
echo "digite um valor"
read v1
if [ $v1 -lt 0 ]
then
  echo "valor negativo"
elif [ $1 -eq 0 ]
then
  echo "nulo"
else
  echo "valor positivo"
fi

4)
#!/bin/bash
echo Digite o numero:
read X
for Y in 1 2 3 4 5 6 7 8 9
do
echo "$X*$Y = $[X*Y]"
done

5)
#!/bin/bash
echo "Entre com 1 = calendario e 2 = lista de arquivos"
read v1
if [ $v1 -eq 1]
then
  cal
elif [ $v1 -eq 2 ]
then
  ls
fi
